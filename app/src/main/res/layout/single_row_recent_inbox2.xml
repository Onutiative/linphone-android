<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">


    <androidx.cardview.widget.CardView

        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="1dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/tools"
        app:cardElevation="6dp"
        card_view:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:id="@+id/linear_layout_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+8801714133069"
                    android:id="@+id/t1"
                    />

                <TextView
                    android:id="@+id/t3"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="17/7/2018 | 10.45AM"
                    />

            </LinearLayout>

            <LinearLayout

                android:layout_below="@+id/linear_layout_top"
                android:id="@+id/linear_layout_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dummy_text"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:gravity="right"
                android:layout_below="@+id/linear_layout_middle"
                android:id="@+id/linear_layout_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:id="@+id/imageview_dot"
                    android:layout_gravity="right"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/big_dot"
                    />



            </LinearLayout>



        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>

